<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainTainData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageViewMaintain"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPilihFotoMaintain"
                android:layout_width="350dp"
                android:layout_height="63dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Pilih Gambar" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarMaintain"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextIdMaintain"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="Masukkan Id Ukm" />
        <EditText
            android:id="@+id/editTextNamaMaintain"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="Masukkan Nama" />
        <EditText
            android:id="@+id/editTextJmlMaintain"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:hint="Masukkan Jumlah Anggota" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSaveMaintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>